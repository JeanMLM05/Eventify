<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <link rel="stylesheet" href="https://use.typekit.net/ltx2luq.css">
    <link rel="stylesheet" href='/ActualizacionEventos/ActualizacionEventos.css'>
    <title>Actualización de Eventos</title>
</head>

<body>

<!-- HEADER -->
<header>
    <a href="/InicioU" class="header-left">
        <img src="/IMG/eventify-logo.png" alt="Eventify Logo" class="header-logo">
    </a>

    <div class="header-right">
        <li class="opciones-menu-header">
            <a>EVENTOS</a>
            <ul class="sub-menu-header">
                <li class="opciones-submenu-header"><a href="/EventosFiestas">FIESTAS</a></li>
                <li class="opciones-submenu-header"><a href="/EventosDeportes">DEPORTES</a></li>
                <li class="opciones-submenu-header"><a href="/EventosConciertos">CONCIERTOS</a></li>
                <li class="opciones-submenu-header"><a href="/EventosExposiciones">EXPOSICIONES</a></li>
                <li class="opciones-submenu-header"><a href="/EventosGastronomia">GASTRONOMÍA</a></li>
            </ul>
        </li>
        <a href="/Nosotros">NOSOTROS</a>
        <a href="/MiPerfilU">MI PERFIL</a>
    </div>

    <form>
        <div class="search">
            <img src="/IMG/searchh.png" alt="buscar" width="30rem">
            <input class="search-input" type="search" placeholder="BUSCAR">
        </div>
    </form>
</header>

<!-- CONTENIDO -->
<div class="contenedor-fondo" id="contenedor-fondo">
    <div class="info-eventify">
        <div class="event-management">
            <h3>Lista de Eventos</h3>
            <table>
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Fecha</th>
                        <th>Lugar</th>
                        <th>Hora</th>
                        <th>Descripción</th>
                        <th>Precio General</th>
                        <th>Precio VIP</th>
                    </tr>
                </thead>
                <tbody>
                    <% eventos.forEach(evento => { %>
                        <tr>
                            <td><%= evento.titulo %></td>
                            <td><%= new Date(evento.fecha).toLocaleDateString() %></td>
                            <td><%= evento.lugar %></td>
                            <td><%= evento.hora %></td>
                            <td><%= evento.descripcion %></td>
                            <td><%= evento.precioGeneral %></td>
                            <td><%= evento.precioVip %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        

<!-- FOOTER -->
<footer>
    <div class="footer-container">
        <div class="footer-left">
            <span class="footer-logo">EVENTIFY</span>
        </div>
        <div class="footer-center">
            <a href="/TerminosCondiciones">Términos y condiciones</a>
            <a href="/Soporte">Ayuda</a>
            <a href="/PoliticaPrivacidad">Política de Privacidad</a>
            <a href="/Contacto">Contáctanos</a>
        </div>
        <div class="footer-right">
            <a href="https://www.facebook.com" target="_blank" class="social">Facebook</a>
            <a href="https://www.instagram.com" target="_blank" class="social">Instagram</a>
            <a href="https://www.twitter.com" target="_blank" class="social">Twitter</a>
        </div>
    </div>

    <!-- Línea divisora -->
    <div class="footer-divider"></div>

    <!-- Derechos reservados -->
    <div class="footer-bottom">
        <p>©️ 2024 Tropical Developers. Todos los derechos reservados.</p>
    </div>
</footer>

</body>
</html>
